.container {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.title-container {
  height: 15%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.title {
  height: 33%;
  width: 100vw;
}

.subtitle {
  width: 100vw;
  text-align: center;
  font-size: 20px;
  color: #666;
}

.image-container {
  height: 50%;
  width: 100vw;
  max-width: 600px;
  max-height: 600px;
  padding-bottom: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.image {
  width: auto;
  height: 77%;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.2);
}

.gesture-container {
  position: absolute;
  right: 0;
	left: 0;
	top: 50vh;
  bottom: 0;
  height: 50vh;
  z-index: 1;
}

.tip-container {
  display: flex;
  flex-direction: column;
  height: 35%;
  width: 100vw;
  align-items: center;
  justify-content: center;
  padding-top: 10%;
  box-sizing: border-box;
}

.tip {
  width: 100vw;
  height: 60%;
  font-size: 16px;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #999;
}