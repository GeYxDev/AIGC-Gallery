.individual-cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100vw;
  background-color: #fff;
}

.individual-container {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: #fff;
}

.individual-display {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  box-sizing: border-box;
}

.individual-info {
  position: relative;
  width: 100%;
  height: 550rpx;
  background-color: #333;
}

.individual-func {
  position: absolute;
  width: 215rpx;
  height: 270rpx;
  left: 40rpx;
  bottom: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  z-index: 2;
}

.individual-avatar {
  width: 215rpx;
  height: 215rpx;
  border: 3px solid #fff;
  border-radius: 5px;
  box-sizing: border-box;
}

.individual-settings {
  width: 215rpx;
  height: 50rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #555;
  font-size: 12px;
  border: 1.5px solid #777;
  border-radius: 5px;
  box-sizing: border-box;
}

.individual-nickname {
  position: absolute;
  width: 420rpx;
  height: 100rpx;
  left: 280rpx;
  bottom: 180rpx;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
  z-index: 3;
}

.individual-social {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  background-color: #f8f8f9;
  box-sizing: border-box;
  z-index: 1;
}

.individual-follow {
  width: 80rpx;
  height: 105rpx;
  margin: 40rpx 50rpx 40rpx 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.individual-data {
  width: 80rpx;
  height: 55rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
}

.individual-text {
  width: 80rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #5f5f5f;
  font-size: 26rpx;
}

.individual-exhibit {
  position: relative;
  width: 690rpx;
  height: auto;
  margin: 10rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.individual-load {
  position: absolute;
  width: 30vw;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: transparent;
  z-index: -1;
}

.individual-fail {
  position: absolute;
  width: 75vw;
  height: 30vh;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  background-color: transparent;
  z-index: 1000;
}

.individual-year {
  width: 690rpx;
  height: auto;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.individual-year-label {
  width: 650rpx;
  height: auto;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #333;
  font-size: 42rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.individual-time {
  width: 650rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}

.individual-time-label {
  width: 130rpx;
  height: auto;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.individual-time-day {
  width: 130rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;
  color: #555;
  font-size: 40rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.individual-time-month {
  width: 70rpx;
  height: auto;
  margin-bottom: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.individual-moment {
  width: 520rpx;
  height: auto;
  padding-top: 10rpx;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.individual-moment-item {
  width: 510rpx;
  height: auto;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.individual-content {
  width: 510rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.individual-content-theme {
  width: 510rpx;
  height: auto;
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
}

.individual-content-text {
  width: 510rpx;
  height: auto;
  color: #222;
  font-size: 26rpx;
}

.individual-media {
  width: 510rpx;
  height: auto;
  margin-top: 6rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
}

.individual-media {
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  box-sizing: border-box;
}

.individual-next-load {
  width: 100%;
  height: 20px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  font-size: 10px;
  background-color: transparent;
  z-index: -1;
}