.media-container {
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  box-sizing: border-box;
}

.media-share {
  position: relative;
  width: 100%;
  height: 100%;
}

.media-locate {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  background-color: transparent;
}

.media-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transform-origin: center;
}