}

.imagine-func {
  width: 100%;
  height: 100rpx;
  padding: 10rpx 50rpx 30rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  z-index: 50;
}

.publish-func-release {
  width: 100%;
  height: 60rpx;
  display: flex;
