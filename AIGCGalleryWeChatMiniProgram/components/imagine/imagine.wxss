.imagine-container {
  position: relative;
  flex: 1;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  background-color: #fff;
}

.imagine-scroll {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: transparent;
  box-sizing: border-box;
  z-index: 20;
}

.imagine-select {
  width: 714rpx;
  height: auto;
  padding-top: 18rpx;
  padding-left: 18rpx;
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
}

.imagine-select-show {
  width: 226rpx;
  height: 226rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.imagine-select-show-image {
  width: 226rpx;
  height: 226rpx;
  border-radius: 10rpx;
}

.imagine-select-show-video {
  width: 226rpx;
  height: 226rpx;
  border-radius: 10rpx;
}

.imagine-select-add.active {
  width: 226rpx;
  height: 226rpx;
  padding-top: 16rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #fefefe;
  box-sizing: border-box;
}

.imagine-select-add.inactive {
  width: 226rpx;
  height: 226rpx;
  padding-top: 16rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ddd;
