  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.imagine-create-progress-pointer {
  width: auto;
  height: 40rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 20rpx;
  box-sizing: border-box;
}

.imagine-create-progress-frame {
  flex: 1;
  width: auto;
  height: 10rpx;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border: 2rpx solid #bbb;
  border-radius: 5rpx;
  box-sizing: border-box;
}

.imagine-create-progress-rate {
  height: 10rpx;
  border-radius: 5rpx;
  background-color: #ccc;
}

.imagine-describe {
  width: 714rpx;
  height: auto;
  margin-top: 20rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.imagine-describe-theme {
  width: 100%;
  height: auto;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
}

.imagine-describe-theme-text {
  flex: 1;
  width: auto;
  height: auto;
  color: #000;
  font-size: 34rpx;
  font-weight: bolder;
}

.imagine-describe-content {
  width: 100%;
  height: auto;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
}

.imagine-describe-content-text {
  flex: 1;
  width: auto;
