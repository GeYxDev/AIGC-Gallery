  background-color: #fafafa;
  box-sizing: border-box;
}

.imagine-select-add-icon {
  width: 80rpx;
  height: 80rpx;
}

.imagine-select-add-text {
  font-size: 20rpx;
  color: #666;
}

.imagine-create {
  width: 714rpx;
  height: auto;
  padding-bottom: 10rpx;
  margin-top: 8rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
  border-bottom: .5px solid #cecece;
  box-sizing: border-box;
}

.imagine-create-image {
  width: 100%;
  height: auto;
  padding: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.imagine-create-video {
  width: 100%;
  height: auto;
  padding: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  box-sizing: border-box;
}

.imagine-create-type {
  margin-left: 5rpx;
  font-size: 22rpx;
  color: #bbb;
}

.imagine-create-input {
  width: 100%;
  height: auto;
  padding: 15rpx 20rpx;
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  border: 0.2rpx solid #777;
  border-radius: 30rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(192, 192, 192, 0.1);
  box-sizing: border-box;
}

.imagine-create-text {
  width: 100%;
  height: auto;
  min-height: 145rpx;
  color: #000;
  font-size: 26rpx;
}

.imagine-create-setting {
  width: 100%;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;
}

.imagine-create-func {
  flex: 1;
  width: auto;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
}

.imagine-create-icon {
  width: 55rpx;
  height: 55rpx;
  padding: 8rpx 8rpx;
  border: 2rpx solid #999;
  border-radius: 27rpx;
  box-sizing: border-box;
}

.imagine-create-send {
  width: auto;
  height: 55rpx;
  padding: 0 20rpx;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #222;
  font-size: 24rpx;
  border: 2rpx solid #999;
  border-radius: 27rpx;
  background-color: #fcfcfc;
  box-sizing: border-box;
}

.imagine-create-progress {
  width: 704rpx;
  height: auto;
  margin: 6rpx 5rpx 24rpx 5rpx;
  padding: 0 10rpx;
