.moment-container {
  position: relative;
  flex: 1;
  width: 750rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.moment-load {
  position: absolute;
  width: 30vw;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: transparent;
  z-index: -1;
}

.moment-fail {
  position: absolute;
  width: 75vw;
  height: 75vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  background-color: transparent;
  z-index: 1000;
}

.moment-scroll {
  width: 750rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: transparent;
  box-sizing: border-box;
}

.moment-next {
  width: 750rpx;
  height: 40rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  background-color: transparent;
  z-index: -1;
}

.moment-hidden-cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
  z-index: 1000;
}

.moment-hidden-cancel {
  width: 100%;
  height: auto;
  flex-grow: 1;
}

.moment-hidden-locate {
  width: 100%;
  height: auto;
  padding-top: 8px;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  box-sizing: border-box;
}

.moment-hidden-input {
  width: 100%;
  height: 54px;
  min-height: 54px;
  color: #333;
  font-size: 15px;
}

.moment-hidden-send {
  width: 55px;
  height: 25px;
  margin-top: 6px;
  margin-left: auto;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #878a8f;
  font-size: 12px;
  border: .8px solid #878a8f;
  border-radius: 10px;
  box-sizing: border-box;
}