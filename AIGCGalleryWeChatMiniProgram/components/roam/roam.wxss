.roam-container {
  position: relative;
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  background-color: #fafafa;
}

.scroll-container {
  flex: 1;
  width: 100%;
  padding: 0 6px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: transparent;
}

.first-load {
  position: absolute;
  width: 30vw;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: transparent;
  z-index: -1;
}

.fail-load {
  position: absolute;
  width: 75vw;
  height: 75vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  background-color: transparent;
  z-index: 1000;
}

.next-load {
  width: 100%;
  height: 20px;
  font-size: 10px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  background-color: transparent;
  z-index: -1;
}