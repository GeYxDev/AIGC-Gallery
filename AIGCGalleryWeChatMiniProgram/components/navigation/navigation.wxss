.navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100vw;
  display: flex;
  background-color: transparent;
}

.navigation-content {
  width: auto;
  display: flex;
  padding: 2px;
  flex-direction: row;
  align-items: center;
  border: 1px solid rgba(192, 192, 192, 0.5);
  border-radius: 16px;
  box-sizing: border-box;
}

.navigation-avatar {
  width: auto;
  min-width: 26px;
  height: 100%;
  border: 1.5px solid rgba(225, 225, 225, 0.8);
  border-radius: 50%;
  box-sizing: border-box;
}

.navigation-avatar-default {
  width: auto;
  min-width: 26px;
  height: 100%;
  border-radius: 50%;
  box-sizing: border-box;
}

.navigation-textarea {
  width: auto;
  height: 100%;
  margin-left: 7px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.navigation-textarea-nickname {
  width: 100%;
  height: 60%;
  font-size: 13px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #363636;
}

.navigation-textarea-prompt {
  width: 100%;
  height: 40%;
  font-size: 9px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #8f8f8f;
}